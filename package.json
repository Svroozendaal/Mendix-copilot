{
  "name": "mendix-copilot",
  "version": "0.1.0",
  "description": "MCP Server that gives Claude access to your Mendix app model",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mendix-copilot": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run build:web",
    "build:web": "vite build web-ui --config web-ui/vite.config.ts",
    "dev": "concurrently -k -n API,WEB \"npm run dev:api\" \"npm run dev:web\"",
    "dev:mcp": "tsx watch src/index.ts",
    "dev:api": "tsx watch src/web/api/index.ts",
    "dev:web": "vite web-ui --config web-ui/vite.config.ts",
    "start": "node dist/index.js",
    "start:api": "node dist/web/api/index.js",
    "test": "vitest",
    "test:ci": "vitest run",
    "typecheck": "tsc --noEmit",
    "typecheck:web": "tsc --noEmit -p web-ui/tsconfig.json",
    "lint": "tsc --noEmit"
  },
  "keywords": ["mendix", "mcp", "claude", "ai", "low-code"],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.21.2",
    "mendixplatformsdk": "^5.0.0",
    "mendixmodelsdk": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "vite": "^6.2.0",
    "vitest": "^2.0.0"
  }
}
